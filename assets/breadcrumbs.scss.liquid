.breadcrumbs {
    width: 100%;
    padding: 9px 64px;
    background: #f4f4f4;

    @media (max-width: 768px) {
        padding: 9px 15px;
    }

    ul {
        list-style-type: none;
        display: flex;
        flex-direction: row;
        padding: 0;
        margin: 0;

        li {
            margin-right: 14px;
            font-style: normal;
            font-weight: 400;
            font-size: 14px;
            line-height: 20px;
            color: #000;

            a {
                font-style: normal;
                font-weight: 400;
                font-size: 14px;
                line-height: 20px;
                color: #000;
                text-transform: capitalize;
            }
        }
    }
}