.product-card {
    .img-container {
        width: 100%;
        max-width: 400px;
        height: 304px;
        margin-bottom: 16px;
        position: relative;
        
        img {
            width: 100%;
            height: 100%;
            position: absolute;
            object-fit: cover;
        }
    }

    .name {
        font-style: normal;
        font-weight: 600;
        font-size: 18px;
        line-height: 26px;
    }

    .description {
        font-style: normal;
        font-weight: 400;
        font-size: 14px;
        line-height: 22px;
        margin-bottom: 8px;
    }

    .price {
        font-style: normal;
        font-weight: 600;
        font-size: 20px;
        line-height: 32px;
    }
}