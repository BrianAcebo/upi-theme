/* In Store Brands */
    .in-store-brands {

        .brands-we-carry {
            font-style: normal;
            font-weight: 700;
            font-size: 18px;
            line-height: 26px;
            margin-bottom: 48px;
        }

        .brand-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;

            @media (max-width: 768px) {
                flex-direction: column;
            }

            .brand-container {
                width: 100%;
                flex-wrap: wrap;
                margin: 0 -4px;

                .brand {
                    width: 100%;
                    background: #F4F4F4;
                    margin: 0 4px 8px 4px;
                    max-width: 430px;
                    height: 84px;
                    text-align: center;
                    padding: 14px;

                    img {
                      width: auto;
                      height: 100%;
                    }
                }
            }
        }
    }