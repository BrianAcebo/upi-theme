/* In Store Brands */
    .in-store-brands {

        .brands-we-carry {
            font-style: normal;
            font-weight: 700;
            font-size: 18px;
            line-height: 26px;
            margin-bottom: 48px;
        }

        .brand-container:nth-of-type(2) {
            margin: 0 8px;
        }

        .brand-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;

            @media (max-width: 768px) {
                flex-direction: column;
            }

            .brand-container {
                width: 100%;

                .brand {
                    width: 100%;
                    height: 84px;
                    background: #F4F4F4;
                    margin-bottom: 8px;
                }
            }
        }
    }