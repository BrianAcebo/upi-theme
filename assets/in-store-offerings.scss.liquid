#in-store-page {

    .in-store-page-wrapper {
        padding: 0 64px;

        @media (max-width: 768px) {
            padding: 0 15px;
        }

        .products-we-sell {
            padding: 88px 0 112px 0;

            @media (max-width: 768px) {
                padding: 75px 0;
            }

            span {
                font-style: normal;
                font-weight: 600;
                font-size: 16px;
                line-height: 22px;
                color: #0051A1;
                margin-bottom: 16px;
                display: block;

                @media (max-width: 995px) {
                    margin-bottom: 10px;
                }
            }

            h2 {
                font-style: normal;
                font-weight: 700;
                font-size: 48px;
                line-height: 56px;
                margin-bottom: 24px;

                @media (max-width: 995px) {
                    font-size: 32px;
                    line-height: 46px;
                    margin-bottom: 10px;
                }
            }

            p {
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 26px;

                @media (max-width: 995px) {
                    font-size: 16px;
                    line-height: 26px;
                }
            }

            h4 {
                font-style: normal;
                font-weight: 700;
                font-size: 48px;
                line-height: 56px;
                margin-bottom: 24px;

                @media (max-width: 995px) {
                    font-size: 32px;
                    line-height: 46px;
                    margin-bottom: 10px;
                }
            }

            p {
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 26px;
                margin-bottom: 48px;

                @media (max-width: 995px) {
                    font-size: 16px;
                    line-height: 26px;
                }
            }

            .products-we-sell-container {
                display: flex;
                justify-content: space-between;

                @media (max-width: 995px) {
                    flex-direction: column;
                }

                .products-we-sell-wrapper {
                    width: 33%;
                    margin-top: 75px;
                    max-width: 384px;

                    @media (max-width: 995px) {
                        width: 100%;
                        margin-top: 20px;
                        max-width: none;
                    }
            

                    img {
                        width: 48px;
                        height: 48px;
                        margin-bottom: 24px;
                    }

                    h3 {
                        font-style: normal;
                        font-weight: 700;
                        font-size: 24px;
                        line-height: 32px;
                        margin-bottom: 24px;
                    }

                    p {
                        font-style: normal;
                        font-weight: 400;
                        font-size: 16px;
                        line-height: 24px;
                    }
                }
            }
        }

        .brands-container {
            text-align: center;

            @media (max-width: 995px) {
                text-align: left;
            }

            span {
                font-style: normal;
                font-weight: 600;
                font-size: 16px;
                line-height: 22px;
                color: #0051A1;
                margin-bottom: 16px;
                display: block;

                @media (max-width: 995px) {
                    margin-bottom: 10px;
                }
            }

            h4 {
                font-style: normal;
                font-weight: 700;
                font-size: 48px;
                line-height: 56px;
                margin-bottom: 24px;

                @media (max-width: 995px) {
                    font-size: 32px;
                    line-height: 46px;
                    margin-bottom: 10px;
                }
            }

            p {
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 26px;
                margin-bottom: 48px;

                @media (max-width: 995px) {
                    font-size: 16px;
                    line-height: 26px;
                }
            }

            p.brands-we-carry {
                display: none;
            }
        }

        .testimonials-container {
            padding: 148px 0;
            text-align: center;

            @media (max-width: 995px) {
                padding: 75px 0;
                text-align: left;
            }

            span {
                font-style: normal;
                font-weight: 600;
                font-size: 16px;
                line-height: 22px;
                color: #0051A1;
                margin-bottom: 16px;
                display: block;

                @media (max-width: 995px) {
                    margin-bottom: 10px;
                }
            }

            h4 {
                font-style: normal;
                font-weight: 700;
                font-size: 48px;
                line-height: 56px;
                margin-bottom: 24px;

                @media (max-width: 995px) {
                    font-size: 32px;
                    line-height: 46px;
                    margin-bottom: 10px;

                }
            }

            p {
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 26px;
                margin-bottom: 48px;

                @media (max-width: 995px) {
                    font-size: 16px;
                    line-height: 26px;
                }
            }

            .testimonial {
                border: 1px solid #000000;
                padding: 32px;
                cursor: pointer;
                text-align: left;

                .stars-container  {
                    margin-bottom: 24px;
                }

                p {
                    font-style: normal;
                    font-weight: 400;
                    font-size: 18px;
                    line-height: 26px;
                    margin-bottom: 24px;
                }

                .testimonial-avatar {
                    width: 56px;
                    height: 56px;
                    position: relative;
                    margin-right: 20px;

                    img {
                        width: 100%;
                        height: 100%;
                        object-fit: cover;
                        position: absolute;
                    }
                }

                strong {
                    font-style: normal;
                    font-weight: 600;
                    font-size: 16px;
                    line-height: 24px;
                }

                small {
                    font-style: normal;
                    font-weight: 400;
                    font-size: 16px;
                    line-height: 24px;
                }
            }
        }
    }
}