#sloan-repair-parts-page {
    padding: 112px 0;

    @media (max-width: 768px) {
        padding: 75px 15px;
    }

    h1 {
        font-style: normal;
        font-weight: 700;
        font-size: 48px;
        line-height: 56px;
        text-align: center;
        margin-bottom: 32px;

        @media (max-width: 768px) {
            text-align: left;
            font-size: 32px;
            line-height: 40px;
            margin-bottom: 18px;
        }
    }

    .page-desc {
        font-style: normal;
        font-weight: 400;
        font-size: 18px;
        line-height: 26px;
        margin-bottom: 80px;
        text-align: center;

        @media (max-width: 768px) {
            text-align: left;
            font-size: 18px;
            line-height: 26px;
            margin-bottom: 30px;
        }
    }

    .repair-parts-collections-container {
        width: 100%;
        flex-wrap: wrap;
        display: flex;
        justify-content: center;
        margin: -16px;

        @media (max-width: 768px) {
            margin: 0 -3px;
        }

        .repair-part-collection {
            width: 33%;
            max-width: 416px;
            margin: 16px;
            display: block;

            @media (max-width: 768px) {
                width: 165px;
                max-width: 416px;
                margin: 0 3px 20px 3px;
                display: block;
            }

            img {
                width: 100%;
                height: auto;
                margin-bottom: 15px;
            }

            p {
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 36px;
                margin: 0 12px 0 0;
                color: #000;

                @media (max-width: 768px) {
                    font-size: 10px;
                    line-height: 12px;
                    margin: 0 8px 0 0;
                }
            }

            .line-arrow {
                max-width: 18px;
                margin: 0;

                @media (max-width: 768px) {
                    max-width: 10px;
                }
            }
        }
    }
}