#sloan-repair-parts-page {
    padding: 112px 0;

    h1 {
        font-style: normal;
        font-weight: 700;
        font-size: 48px;
        line-height: 56px;
        text-align: center;
        margin-bottom: 32px;
    }

    .page-desc {
        font-style: normal;
        font-weight: 400;
        font-size: 18px;
        line-height: 26px;
        margin-bottom: 80px;
        text-align: center;
    }

    .repair-parts-collections-container {
        width: 100%;
        flex-wrap: wrap;
        display: flex;
        justify-content: center;
        margin: -16px;

        .repair-part-collection {
            width: 33%;
            max-width: 416px;
            margin: 16px;
            display: block;

            img {
                width: 100%;
                height: auto;
                margin-bottom: 15px;
            }

            p {
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 36px;
                margin: 0 12px 0 0;
                color: #000;
            }

            .line-arrow {
                max-width: 18px;
                margin: 0;
            }
        }
    }
}