#contact-page {
    .breadcrumbs {
        background: #F4F4F4;
        display: none;

        @media (max-width: 768px) {
            display: block;
        }
    }

    .contact-container {
        flex-direction: row;
        padding: 112px 65px;

        @media (max-width: 995px) {
            flex-direction: column;
            padding: 0;
        }

        .left-side,
        .right-side {
            width: 50%;

            @media (max-width: 995px) {
                width: 100%;
            }
        }

        .left-side {
            padding-right: 40px;

            @media (max-width: 995px) {
                padding: 50px 18px;
            }

            h1 {
                font-style: normal;
                font-weight: 700;
                font-size: 48px;
                line-height: 62px;
                margin-bottom: 24px;

                @media (max-width: 768px) {
                    font-size: 32px;
                    line-height: 42px;
                    margin-bottom: 24px;
                }
            }

            p {
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 26px;
                margin-bottom: 32px;

                @media (max-width: 768px) {
                    margin-bottom: 22px;
                }
            }

            label {
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 24px;
                margin-bottom: 8px;
            }

            input,
            textarea {
                padding: 12px;
                width: 100%;
                height: 48px;
                background: #FFFFFF;
                border: 1px solid #000000;
                margin-bottom: 24px;
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 24px;
            }

            textarea {
                height: 180px;
            }
        }

        .right-side {
            padding-left: 40px;

            @media (max-width: 995px) {
                padding: 0;
                min-height: 400px;
            }
        }
    }
}