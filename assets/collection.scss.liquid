#collection-page {

    .collection-container {
        padding: 112px 64px;

        .collection-title {
            font-style: normal;
            font-weight: 400;
            font-size: 48px;
            line-height: 56px;
            margin-bottom: 16px;
        }

        .collection-sub {
            font-style: normal;
            font-weight: 700;
            font-size: 18px;
            line-height: 26px;
            margin: 0;
        }

        .collection-wrapper {
            padding: 80px 0 112px 0;

            .collection-nav {
                width: 20%;

                #collapseSearch {

                    .search-container {
                        svg {
                            width: 18px;
                            height: 18px;
                        }

                        input {
                            border: none;
                            outline: none;
                            width: 100%;
                        }
                    }
                }

                .clear-all {
                    font-style: normal;
                    font-weight: 600;
                    font-size: 14px;
                    line-height: 18px;
                    color: #000;
                }

                .collection-nav-title {
                    font-style: normal;
                    font-weight: 400;
                    font-size: 20px;
                    line-height: 28px;
                    margin: 0;
                }

                .collection-filter-tag {
                    font-style: normal;
                    font-weight: 400;
                    font-size: 16px;
                    line-height: 24px;
                }

                .acc-main-header {
                    .collection-filter-tag {
                        font-style: normal;
                        font-weight: 700;
                        font-size: 18px;
                        line-height: 26px;
                    }
                }

                .accordion-item {
                    border: none;
                }

                .accordion-button {
                    background: transparent;
                    border: none!important;
                    color: #000;
                    box-shadow: none;
                    padding: 0;

                    &::after {
                        background-image: var(--bs-accordion-btn-icon);
                    }
                }

                .accordion-body {
                    padding: 0;

                    .acc-list {
                        ul {
                            list-style-type: none;
                            padding: 0;
                            margin-right: 3rem;

                            li {
                                margin-bottom: 1rem;

                                a {
                                    text-decoration-line: underline;
                                    color: #0051A1;
                                    font-style: normal;
                                    font-weight: 400;
                                    font-size: 16px;
                                    line-height: 24px;
                                }
                            }
                        }
                    }
                }
            }
        }

        .collection-right {
            width: 80%;
            padding-left: 64px;

            .collection-right-top {
                width: 100%;
                display: flex;
                flex-direction: row;
                margin-bottom: 24px;

                .tags-container {
                    width: 80%;

                    .tag {
                        background: #F4F4F4;
                        padding: 8px 16px;
                        font-style: normal;
                        font-weight: 600;
                        font-size: 14px;
                        line-height: 18px;
                        margin-right: 24px;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        height: 36px;
                        text-transform: capitalize;

                        span a {
                            font-size: 14px;
                            line-height: 18px;
                            margin-left: 8px;
                            color: #000;
                        }
                    }
                }
    
                .sorting {
                    width: 20%;
                    max-width: 300px;
                    min-width: 200px;
                    display: flex;
                    align-items: center;
    
                    h2 {
                        min-width: 75px;
                    }
                }
            }

            .collection-products {
                flex-wrap: wrap;
                width: 100%;
                display: flex;
                align-items: flex-start;
                justify-content: flex-start;
                margin: -20px;
    
                .product-card {
                    width: 300px;
                    margin: 20px;
                }
            } 
        }
    }

}