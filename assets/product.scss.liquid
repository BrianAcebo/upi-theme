#product-page {
    padding: 0 64px 112px 64px;

    @media (max-width: 995px) {
        padding: 0;
    }

    .product-info {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 112px 0;

        @media (max-width: 995px) {
            flex-direction: column;
            padding: 0;
        }

        img {
            width: 100%;
            max-width: 600px;
            margin-right: 40px;
            height: auto;

            @media (max-width: 995px) {
                margin: 0 auto;
            }
        }

        .info-container {
            padding-left: 40px;

            @media (max-width: 995px) {
                padding: 40px 15px 0 15px;
            }

            span {
                font-style: normal;
                font-weight: 600;
                font-size: 16px;
                line-height: 24px;
                text-align: left;
                color: #0051A1;
                margin-bottom: 10px;
                display: block;
        
                @media (max-width: 995px) {
                    margin-bottom: 10px;
                }
            }

            h1 {
                font-style: normal;
                font-weight: 700;
                font-size: 40px;
                line-height: 55px;
                margin-bottom: 24px;

                @media (max-width: 995px) {
                    font-size: 24px;
                    line-height: 32px;
                    margin-bottom: 10px;
                }
            }

            h2, strong {
                font-style: normal;
                font-weight: 700;
                font-size: 24px;
                line-height: 32px;
                margin-bottom: 24px;
                display: block;

                @media (max-width: 995px) {
                    font-size: 18px;
                    line-height: 26px;
                    margin-bottom: 10px;
                }
            }

            .desc {
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 24px;
                margin-bottom: 16px;

                a {
                    color: #0051A1!important;
                }
            }

            .specs {
                padding-left: 10px;
                margin: 0;

                li {
                    font-style: normal;
                    font-weight: 400;
                    font-size: 16px;
                    line-height: 24px;
                    margin-bottom: 8px;
                }
            }

            .q-container {
                margin: 24px 0 44px 0;

                @media (max-width: 995px) {
                    margin: 24px 0;
                }

                form {
                    width: 100%;
                }

                .q {
                    font-style: normal;
                    font-weight: 400;
                    font-size: 16px;
                    line-height: 24px;
                    color: #0051A1;
                    margin: 0 24px 0 0;
                }

                .quantity {
                    padding: 12px;
                    width: 64px;
                    height: 48px;
                    background: #FFFFFF;
                    border: 1px solid #0051A1;
                    margin-right: 24px;
                    font-style: normal;
                    font-weight: 400;
                    font-size: 16px;
                    line-height: 24px;
                }

                .cta-btn {
                    width: 100%;
                    text-align: center;
                }
            }

            .buy-now-btn {
                border: 1px solid #000000;
                padding: 12px 0;
                width: 100%;
                background: transparent;
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 24px;
            }

            .free-shipping {
                display: block;
                margin: 16px 0 32px 0;
                text-align: center;
            }

            .product-accordions {
                .accordion-item:first-of-type {
                    border-top-left-radius: 0;
                    border-top-right-radius: 0;
                }
                
                .accordion-item {
                    color: var(--bs-accordion-color);
                    background-color: var(--bs-accordion-bg);
                    border: none;
                }

                .accordion-header {
                    margin: 0;
                }

                .accordion-button:not(.collapsed) {
                    color: #000;
                    background-color: #fff;
                    border: none;
                    border-top: 1px solid #000;
                    border-radius: 0;
                    box-shadow: none;

                    &::after {
                        background-image: var(--bs-accordion-btn-icon);
                    }
                }

                .accordion-button {
                    color: #000;
                    background-color: #fff;
                    border: none;
                    border-top: 1px solid #000;
                    border-radius: 0;
                    font-family: 'Roboto';
                    font-style: normal;
                    font-weight: 600;
                    font-size: 18px;
                    line-height: 26px;
                    padding: 16px 0;
                    outline: none;
                }

                .accordion-body {
                    padding: 0;
                    font-family: 'Roboto';
                    font-style: normal;
                    font-weight: 400;
                    font-size: 16px;
                    line-height: 24px;

                    .acc-list {
                        ul {
                            margin: 0 0 24px 0;
                            padding: 0 0 0 15px;

                            li {
                                font-family: 'Roboto';
                                font-style: normal;
                                font-weight: 400;
                                font-size: 16px;
                                line-height: 28px;
                            }
                        }
                    }
                }
            }

            .spec-sheet-download {
                padding: 32px 0;
                border-top: 1px solid #000;
                border-bottom: 1px solid #000;
                font-style: normal;
                font-weight: 700;
                font-size: 20px;
                line-height: 32px;
                display: flex;
                justify-content: space-between;

                @media (max-width: 768px) {
                    flex-direction: column;
                }

                .download-btn {
                    background: #0051A1;
                    color: #fff;
                    width: 215px;
                    height: 47px;
                    padding: 0 18px;
                    border: none;
                    font-style: normal;
                    font-weight: 500;
                    font-size: 16px;
                    line-height: 24px;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;

                    @media (max-width: 768px) {
                        margin-top: 12px;
                        width: 100%;
                        justify-content: center;
                    }

                    img {
                        width: 18px;
                        height: auto;
                        margin: 0;

                        @media (max-width: 768px) {
                            margin: 0 0 0 12px;
                        }
                    }
                }
            }
        }
    }
}