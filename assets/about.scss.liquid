#about-page {
    .about-text {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: row;
        padding: 112px 64px;

        @media (max-width: 995px) {
            padding: 75px 15px;
            flex-direction: column;
        }

        .text-left {
            padding-right: 40px;

            @media (max-width: 995px) {
                padding-right: 0;
            }

            span {
                font-style: normal;
                font-weight: 600;
                font-size: 16px;
                line-height: 22px;
                color: #0051A1;
                margin-bottom: 16px;
                display: block;

                @media (max-width: 995px) {
                    margin-bottom: 10px;
                }
            }

            h2 {
                font-style: normal;
                font-weight: 700;
                font-size: 48px;
                line-height: 56px;
                margin-bottom: 24px;

                @media (max-width: 995px) {
                    font-size: 32px;
                    line-height: 46px;
                    margin-bottom: 10px;
                }
            }

            p {
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 26px;

                @media (max-width: 995px) {
                    margin-bottom: 45px;
                }
            }
        }

        img {
            width: 100%;
            max-width: 600px;
            height: auto;
            margin-left: 40px;

            @media (max-width: 995px) {
                margin-left: 0;
            }
        }
    }
}