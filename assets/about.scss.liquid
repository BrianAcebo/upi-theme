#about-page {

    /* About Text */
    .about-text {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: row;
        padding: 112px 64px;

        @media (max-width: 995px) {
            padding: 75px 15px;
            flex-direction: column;
        }

        .text-left {
            padding-right: 40px;

            @media (max-width: 995px) {
                padding-right: 0;
            }

            span {
                font-style: normal;
                font-weight: 600;
                font-size: 16px;
                line-height: 22px;
                color: #0051A1;
                margin-bottom: 16px;
                display: block;

                @media (max-width: 995px) {
                    margin-bottom: 10px;
                }
            }

            h2 {
                font-style: normal;
                font-weight: 700;
                font-size: 48px;
                line-height: 56px;
                margin-bottom: 24px;

                @media (max-width: 995px) {
                    font-size: 32px;
                    line-height: 46px;
                    margin-bottom: 10px;
                }
            }

            p {
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 26px;

                @media (max-width: 995px) {
                    margin-bottom: 45px;
                }
            }
        }

        img {
            width: 100%;
            max-width: 600px;
            height: auto;
            margin-left: 40px;

            @media (max-width: 995px) {
                margin-left: 0;
            }
        }
    }


    /* Team Slider */
    .team-slider {
        padding: 0 0 120px 64px;

        @media (max-width: 995px) {
            padding: 0 15px 100px 15px;
        }

        span {
            font-style: normal;
            font-weight: 600;
            font-size: 16px;
            line-height: 24px;
            text-align: left;
            color: #0051A1;
            margin-bottom: 16px;
            display: block;

            @media (max-width: 995px) {
                margin-bottom: 10px;
            }
        }

        h3 {
            font-style: normal;
            font-weight: 700;
            font-size: 48px;
            line-height: 65px;
            text-align: left;
            margin-bottom: 24px;

            @media (max-width: 995px) {
                font-size: 32px;
                line-height: 46px;
                margin-bottom: 10px;
            }
        }

        p {
            font-style: normal;
            font-weight: 400;
            font-size: 18px;
            line-height: 26px;
            text-align: left;
            margin: 0;
            display: block;
        }

        .swiper {
            width: 100%;
            height: 100%;
        }

        #team-slider-container {
            margin-top: 80px;
            height: 400px;

            @media (max-width: 995px) {
                margin-top: 32px;
            }

            .swiper-slide {
                width: 400px;

                img {
                    width: 80px;
                    height: 80px;
                    margin-bottom: 24px;
                }

                h4 {
                    font-style: normal;
                    font-weight: 600;
                    font-size: 20px;
                    line-height: 32px;
                }

                .job-title {
                    font-style: normal;
                    font-weight: 400;
                    font-size: 18px;
                    line-height: 26px;
                    margin-bottom: 16px;
                }

                .bio {
                    font-style: normal;
                    font-weight: 400;
                    font-size: 16px;
                    line-height: 24px;
                    margin-bottom: 28px;
                }

                .socials {
                    img {
                        width: 18px;
                        height: 18px;
                        margin-right: 20px;
                    }
                }
            }


            .swiper-btns-container {
                position: absolute;
                right: 60px;
                bottom: 0;
                width: 120px;
                height: 40px;
                display: flex;
                justify-content: space-between;
                align-items: center;

                @media (max-width: 995px) {
                    right: 0;
                }

                .swiper-button-prev::after,
                .swiper-button-next::after {
                    font-family: auto;
                    font-size: inherit;
                    text-transform: none!important;
                    letter-spacing: 0;
                    font-variant: initial;
                    line-height: 1;
                }

                .swiper-button-prev {
                    border: 1px solid #000;
                    border-radius: 50%;
                    width: 40px;
                    height: 40px;
                    display: flex;
                    justify-content: center;
                    align-items: center;

                    &::after {
                        content: url('https://cdn.shopify.com/s/files/1/0666/5784/5535/files/swiper-arrow-left.svg?v=1666629606');
                    }
                }

                .swiper-button-next {
                    border: 1px solid #000;
                    border-radius: 50%;
                    width: 40px;
                    height: 40px;
                    display: flex;
                    justify-content: center;
                    align-items: center;

                    &::after {
                        content: url('https://cdn.shopify.com/s/files/1/0666/5784/5535/files/swiper-arrow-right.svg?v=1666629614');
                    }
                }
            }

            .swiper-pagination {
                width: fit-content;
                right: auto;
                left: 0;
                bottom: 0;
                display: flex;

                .swiper-pagination-bullet {
                    border: 1px solid #404040;
                    background: transparent;
                    opacity: 1;
                }

                .swiper-pagination-bullet-active {
                    background: #404040;
                    border-color: #404040;
                }
            }
        }
    }


    /* About Contact */
    .about-contact {
        padding: 112px 0 0 0;
        background: #f4f4f4;
        text-align: center;

        span {
            font-style: normal;
            font-weight: 600;
            font-size: 16px;
            line-height: 24px;
            text-align: center;
            color: #0051A1;
            margin-bottom: 16px;
            display: block;
        }

        h3 {
            font-style: normal;
            font-weight: 700;
            font-size: 48px;
            line-height: 65px;
            text-align: center;
            margin-bottom: 24px;
        }

        p {
            font-style: normal;
            font-weight: 400;
            font-size: 18px;
            line-height: 26px;
            text-align: center;
            margin: 0;
            display: block;
        }
    }
}