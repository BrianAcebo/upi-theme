.err-container {
    padding: 100px 15px 200px 15px;

    span {
        font-size: 30px;

        @media (max-width: 768px) {
            font-size: 24px
        }
    }

    h1 {
        font-size: 45px;

        @media (max-width: 768px) {
            font-size: 35px
        }
    }

    a {
        text-decoration: underline;
        font-size: 24px;

        @media (max-width: 768px) {
            font-size: 18px
        }
    }

    @media (max-width: 768px) {
        padding: 50px 15px 75px 15px;
    }
}