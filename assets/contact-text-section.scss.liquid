section.contact-text {
    background: #f4f4f4;
    padding: 110px 15px;
    
    .contact-text-container {
        display: flex;
        align-items: center;
        flex-direction: row;

        @media (max-width: 995px) {
            flex-direction: column;
            justify-content: center;
        }

        div {
            width: 33%;

            @media (max-width: 995px) {
            width: 100%;
            margin-bottom: 54px;
            }

            img {
                margin-bottom: 32px;
            }

            h3 {
                font-style: normal;
                font-weight: 700;
                font-size: 32px;
                line-height: 46px;
                color: #000000;
                margin-bottom: 16px;
                text-align: center;
            }

            a, p {
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 22px;
                margin-bottom: 24px;
                text-align: center;
                max-width: 405px;
            }

            a {
                text-decoration: underline!important;
            }
        }
    }
}