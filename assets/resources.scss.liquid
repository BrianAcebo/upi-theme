#resources-page {

    .breadcrumbs {
        background: #F4F4F4;
        display: none;

        @media (max-width: 768px) {
            display: block;
        }
    }

    .resources-page-wrapper {
        padding: 112px 64px;

        @media (max-width: 995px) {
            padding: 35px 15px;
        }

        span {
            font-style: normal;
            font-weight: 600;
            font-size: 16px;
            line-height: 22px;
            color: #0051A1;
            margin-bottom: 16px;
            display: block;

            @media (max-width: 995px) {
                margin-bottom: 10px;
            }
        }

        h2 {
            font-style: normal;
            font-weight: 700;
            font-size: 48px;
            line-height: 56px;
            margin-bottom: 24px;

            @media (max-width: 995px) {
                font-size: 32px;
                line-height: 46px;
                margin-bottom: 10px;
            }
        }

        p {
            font-style: normal;
            font-weight: 400;
            font-size: 18px;
            line-height: 26px;

            @media (max-width: 995px) {
                margin-bottom: 45px;
            }
        }
    }
}