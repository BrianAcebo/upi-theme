#Header {
	box-shadow: inset 0px -1px 0px #000000;
	background-color: #ffffff;
	z-index: 10802;
	position: fixed;
	top: 0;
	width: 100%;
    padding: 24px 64px;

	@media (max-width: 992px) {
		padding: 6px 15px;
	}

	.desktop-header-menu {
		display: flex;
		flex-direction: row;

		@media (max-width: 1200px) {
			display: none;
		}
	}

	.mobile-header-menu {
		display: none;
		flex-direction: column;

		@media (max-width: 1200px) {
			display: flex;
		}
	}

	.nav-logo {
		padding: 0;
	}

	.navbar-nav {
        width: 100%;
        display: flex;
        justify-content: space-around;
        max-width: 755px;
        margin: 0 auto;

		@media (max-width: 1200px) {
			flex-direction: column;
			position: relative;
		}
	}

	.navbar-collapse {
		display: flex;
		justify-content: space-between;
	}

	/* UDUNDI - MOBILE NAVIGATION SLIDES OUT FROM LEFT */
	@media (max-width: 1200px) {
		.navbar-collapse {
			position: absolute;
			top: 100%;
			left: -100%;
			background: white;
			width: 85%;
			height: 100vh;
			padding: 3rem;
			box-shadow: inset 0 6px 6px rgba(0, 0, 0, 0.02);
			overflow: hidden;
			transition: 0.3s;
			display: flex;
			justify-content: flex-start;
			align-items: flex-start;
			border-right: 1px solid #ccc;
			overflow-y: scroll;
			-ms-overflow-style: none;
			scrollbar-width: none;

			&::-webkit-scrollbar {
				display: none;
			}
		}

		.navbar-collapse.collapsing {
			transform: translateX(-100%);
			transition: height 0s ease;
		}

		.navbar-collapse.show {
			transform: translateX(0);
			transition: transform 300ms cubic-bezier(0.25, 1, 0.5, 1);
		}

		.navbar-toggler.collapsed ~ .navbar-collapse {
			transition: transform 500ms cubic-bezier(0.25, 1, 0.5, 1);
		}
	}

	.navbar-toggler {
		display: none;
		border: none;

		@media (max-width: 1200px) {
			display: block;
		}
	}

	.mobile-search {
		display: none;
		margin-bottom: 3rem;

		@media (max-width: 1200px) {
			display: block;
		}
	}

	.header__icons {
		@media (max-width: 1200px) {
			.search-modal__form {
				display: none;
			}
		}
	}

	.nav-link {
		letter-spacing: 0.54px;
		color: #313e41;
		font-size: 16px;
		transition: color 0.4s ease;
		padding: 1rem 0;
		border-bottom: 1px solid #e0e0e0;
		font-weight: 400;
		margin: 0;

		@media (min-width: 1200px) {
			border: none;
			margin: 0 10px
		}
	}

	.nav-carousel-title {
		font-family: var(--font-secondary);
		letter-spacing: 0.54px;
		color: #313e41;
		font-size: 16px;
		transition: color 0.4s ease;
		padding: 0;
		border: 0;
		margin: 0;

		@media (min-width: 992px) {
			font-size: 14px;
			padding: 0.25rem;
			border: none;
		}
	}

	.nav-item {

		&.dropdown {
			position: unset;

			.dropdown-toggle {
				position: relative;
				outline: none;
				outline-offset: unset;
				box-shadow: none;

				@media (min-width: 992px) {
					&:after {
						content: unset;
					}
				}
			}

			.dropdown-menu {
				position: absolute;
				left: 0;
				top: 0;
				width: 100%;
				border-radius: 0;
				border: none;
				padding: 0;
				margin: 0;
				border-top: 1px solid #e0e0e0;
                border-bottom: 1px solid #e0e0e0;
				height: auto;
				overflow-y: scroll;
				overflow-x: hidden;
                height: 500px;

                .nav-fixtures-left {
                    background: #FAFAFA;
                    padding: 0 24px;
                    height: 500px;
                    border-right: 1px solid #e0e0e0;
                }

                .nav-tabs-middle {
                    border-right: 1px solid #e0e0e0;
                }

				&::-webkit-scrollbar {
					display: none;
				}

				-ms-overflow-style: none; /* IE and Edge */
				scrollbar-width: none;

				@media (max-width: 992px) {
					border-top: none;
					transform: translateX(100%);
					transition: transform 400ms cubic-bezier(0.25, 1, 0.5, 1);
					display: block;

					&.show {
						transform: translateX(0%);
					}
				}

				@media (min-width: 992px) {
					top: 100%;
					left: 0;
				}

				.previous-list {
					display: flex;
					align-items: flex-start;
					margin: 0 -15px;

					@media (min-width: 992px) {
						display: none;
					}

					.nav-link {
						padding: 0.5rem 0 1rem 0;
						margin-bottom: 1rem;
					}

					.nav-back-button {
						border-radius: 4px;
						background-color: #f1f1f1;
					}
				}

                .nav-list-title-container {
                    position: relative;
                    width: 100%;
                    padding-bottom: 8px;
                    margin-bottom: 12px;
                    border-bottom: 1px solid rgba(0, 0, 0, 0.5);
                    display: flex;
                    flex-direction: row;
                    justify-content: space-between;
                    align-items: center;
                    cursor: pointer;

                    img {
                        color: #000;
                    }

                    .nav-list-title {
                        display: none;
                        font-style: normal;
                        font-weight: 600;
                        font-size: 16px;
                        line-height: 150%;
                        color: #000;

                        @media (min-width: 992px) {
                            display: block;
                        }
                    }
                }
			}
		}
	}

	.mobile-bottom-nav {
		position: absolute;
		bottom: 0;
		background-color: var(--color-green);
		display: flex;
		justify-content: space-around;
		flex-direction: row;
		width: 100%;
		margin: 0 -15px;
		z-index: 9999;

		.nav-link {
			border: none;
			color:#fff
		}
	}

    .nav-collection-collections-container {
        display: none;

        &:first-of-type {
            display: block;
        }
    }

    .nav-collection-items-container {
        color: #000;
        margin-bottom: 12px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;

        .nav-collection-items-title {
            font-style: normal;
            font-weight: 500;
            font-size: 16px;
            line-height: 24px;
            margin-bottom: 8px;
            color: #000;
        }
    }

    .nav-collection-items-wrapper {
        display: none;
        color: #000;

        &#manualDiChild {
            display: flex;
        }

        .nav-collection-item {
            font-style: normal;
            font-weight: 400;
            font-size: 16px;
            line-height: 24px;
            margin-bottom: 12px;
            color: #000;
        }
    }

	.predictive-search--header {
		position: static;
	}
}
