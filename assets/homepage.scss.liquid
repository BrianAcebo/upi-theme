.home-content {
    padding: 112px 64px 0 64px;

    @media (max-width: 768px) {
        padding: 75px 15px 0 15px;
    }

    .section-display {
        span {
            font-style: normal;
            font-weight: 600;
            font-size: 16px;
            line-height: 24px;
            text-align: left;
            color: #0051A1;
            margin-bottom: 16px;
            display: block;

            @media (max-width: 995px) {
                margin-bottom: 10px;
            }
        }

        h3 {
            font-style: normal;
            font-weight: 700;
            font-size: 48px;
            line-height: 65px;
            text-align: left;
            margin-bottom: 24px;

            @media (max-width: 995px) {
                font-size: 32px;
                line-height: 46px;
                margin-bottom: 10px;
            }
        }

        .display-view-all {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 80px;

            p {
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 26px;
                text-align: left;
                margin: 0;
                display: block;
            }

            .display-view-btn {
                padding: 12px 24px;
                background: transparent;
                color: #000;
                border: 1px solid ;
                outline: none;
                transition: all ease 0.3s;
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 24px;
                display: block;

                @media (max-width: 768px) {
                    display: none;
                }
            }
            
            .display-view-btn:hover {
                opacity: 0.6;
            }
        }

        .products-display {
            display: flex;
            flex-direction: row;
            justify-content: center;

            .home-product:nth-of-type(2) {
                margin: 0 32px;
            }

            .home-product {
                max-width: 416px;

                .home-prod-img {
                    width: 416px;
                    height: 300px;
                    position: relative;
                    margin-bottom: 24px;

                    img {
                        width: 100%;
                        height: 100%;
                        position: absolute;
                        object-fit: cover;
                    }
                }

                .home-prod-title {
                    font-style: normal;
                    font-weight: 700;
                    font-size: 24px;
                    line-height: 32px;
                    margin-bottom: 8px;
                }

                .home-prod-desc {
                    font-style: normal;
                    font-weight: 400;
                    font-size: 16px;
                    line-height: 24px;
                }
            }
        }
    }
}