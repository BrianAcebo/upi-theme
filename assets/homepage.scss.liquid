.home-content {
    padding: 112px 64px 0 64px;

    @media (max-width: 768px) {
        padding: 75px 15px 0 15px;
    }

    .section-display {
        span {
            font-style: normal;
            font-weight: 600;
            font-size: 16px;
            line-height: 24px;
            text-align: left;
            color: #0051A1;
            margin-bottom: 16px;
            display: block;

            @media (max-width: 995px) {
                margin-bottom: 10px;
            }
        }

        h3 {
            font-style: normal;
            font-weight: 700;
            font-size: 48px;
            line-height: 65px;
            text-align: left;
            margin-bottom: 24px;

            @media (max-width: 995px) {
                font-size: 32px;
                line-height: 46px;
                margin-bottom: 10px;
            }
        }

        .display-view-all {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 80px;

            @media (max-width: 768px) {
                margin-bottom: 8px;
            }

            p {
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 26px;
                text-align: left;
                margin: 0;
                display: block;
            }

            .display-view-btn {
                padding: 12px 24px;
                background: transparent;
                color: #000;
                border: 1px solid ;
                outline: none;
                transition: all ease 0.3s;
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 24px;
                display: block;

                @media (max-width: 768px) {
                    display: none;
                }
            }
            
            .display-view-btn:hover {
                opacity: 0.6;
            }
        }

        .products-display {
            display: flex;
            flex-direction: row;
            justify-content: space-between;

            @media (max-width: 995px) {
                display: none;
            }

            .home-product:nth-of-type(2) {
                margin: 0 32px;
            }

            .home-product {
                width: 33%;

                .home-prod-img {
                    width: 100%!important;
                }
            }

        }

        #display-carousel {
            display: none;
            height: 450px;

            @media (max-width: 995px) {
                display: block;
            }

            .swiper-btns-container {
                position: absolute;
                right: 60px;
                bottom: 0;
                width: 120px;
                height: 40px;
                display: flex;
                justify-content: space-between;
                align-items: center;
    
                @media (max-width: 995px) {
                    right: 0;
                }
    
                .swiper-button-prev::after,
                .swiper-button-next::after {
                    font-family: auto;
                    font-size: inherit;
                    text-transform: none!important;
                    letter-spacing: 0;
                    font-variant: initial;
                    line-height: 1;
                }
    
                .swiper-button-prev {
                    border: 1px solid #000;
                    border-radius: 50%;
                    width: 40px;
                    height: 40px;
                    display: flex;
                    justify-content: center;
                    align-items: center;
    
                    &::after {
                        content: url('https://cdn.shopify.com/s/files/1/0666/5784/5535/files/swiper-arrow-left.svg?v=1666629606');
                    }
                }
    
                .swiper-button-next {
                    border: 1px solid #000;
                    border-radius: 50%;
                    width: 40px;
                    height: 40px;
                    display: flex;
                    justify-content: center;
                    align-items: center;
    
                    &::after {
                        content: url('https://cdn.shopify.com/s/files/1/0666/5784/5535/files/swiper-arrow-right.svg?v=1666629614');
                    }
                }
            }
    
            .swiper-pagination {
                width: fit-content;
                right: auto;
                left: 0;
                bottom: 0;
                display: flex;
                height: 25px;
    
                .swiper-pagination-bullet {
                    border: 1px solid #404040;
                    background: transparent;
                    opacity: 1;
                }
    
                .swiper-pagination-bullet-active {
                    background: #404040;
                    border-color: #404040;
                }
            }
        }

        .products-display,
        #display-carousel {

            .home-product {
                max-width: 416px;

                @media (max-width: 995px) {
                    padding-right: 18px;
                }

                @media (max-width: 595px) {
                    max-width: none;
                    padding-right: 0;
                }

                .home-prod-img {
                    width: 416px;
                    height: 300px;
                    position: relative;
                    margin-bottom: 24px;

                    @media (max-width: 995px) {
                        width: 300px;
                        height: 200px;
                    }

                    @media (max-width: 595px) {
                        width: 100%;
                        height: 255px;
                    }

                    img {
                        width: 100%;
                        height: 100%;
                        position: absolute;
                        object-fit: cover;
                    }
                }

                .home-prod-title {
                    font-style: normal;
                    font-weight: 700;
                    font-size: 24px;
                    line-height: 32px;
                    margin-bottom: 8px;

                    @media (max-width: 595px) {
                        font-size: 19px;
                        line-height: 26px;
                        margin-bottom: 6px;
                    }
                }

                .home-prod-desc {
                    font-style: normal;
                    font-weight: 400;
                    font-size: 16px;
                    line-height: 24px;
                    margin-bottom: 24px;

                    @media (max-width: 595px) {
                        font-size: 14px;
                        line-height: 18px;
                        margin-bottom: 12px;
                    }
                }

                .home-prod-link {
                    font-style: normal;
                    font-weight: 400;
                    font-size: 16px;
                    line-height: 24px;
                    color: #0051A1!important;

                    @media (max-width: 595px) {
                        font-size: 14px;
                        line-height: 18px;
                    }

                    img {
                        margin-left: 16px;
                    }
                }
            }
        }

        
    }

    /* About Text */
    .about-text {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: row;
        padding: 112px 0;

        @media (max-width: 995px) {
            padding: 75px 0;
            flex-direction: column;
        }

        .text-left {
            padding-right: 40px;
            width: 100%;

            @media (max-width: 995px) {
                padding-right: 0;
            }

            span {
                font-style: normal;
                font-weight: 600;
                font-size: 16px;
                line-height: 22px;
                color: #0051A1;
                margin-bottom: 16px;
                display: block;

                @media (max-width: 995px) {
                    margin-bottom: 10px;
                }
            }

            h2 {
                font-style: normal;
                font-weight: 700;
                font-size: 48px;
                line-height: 56px;
                margin-bottom: 24px;

                @media (max-width: 995px) {
                    font-size: 32px;
                    line-height: 46px;
                    margin-bottom: 10px;
                }
            }

            p {
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 26px;
                margin-bottom: 32px;

                @media (max-width: 995px) {
                    margin-bottom: 30px;
                }
            }

            .about-list {
                margin: 0 0 16px 0;
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 150%;

                img {
                    max-width: 16px;
                    height: auto;
                    margin: 0 16px 0 0;
                }
            }

            .about-cta {
                background: transparent;
                color: #000;
                border: 1px solid ;
                outline: none;
                transition: all ease 0.3s;
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 24px;
                display: flex;
                justify-content: center;
                align-items: center;
                width: 129px;
                height: 48px;
                margin-top: 40px;

                @media (max-width: 995px) {
                    margin-bottom: 25px;
                }

                @media (max-width: 768px) {
                    width: 100%;
                    margin: 25px 0;
                }
            }
            
            .about-cta:hover {
                opacity: 0.6;
            }
        }

        img {
            width: 100%;
            max-width: 600px;
            height: auto;
            margin-left: 40px;

            @media (max-width: 995px) {
                margin-left: 0;
                max-width: none;
            }
        }
    }

    .in-store-wrapper {
        padding: 112px 0;

        @media (max-width: 768px) {
            padding: 75px 0;
        }
    }
}