<link rel="stylesheet" href="{{ 'contact.scss.css' | asset_url }}">

<div id="contact-page">

    {% render 'breadcrumbs' %}

    <div class="lg-container">

        <!-- Contact Form -->
        <section class="w-full d-flex contact-container">

            <div class="left-side">
                <h1>Contact Us</h1>
                <p>
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                </p>

                {% form 'contact' %}
                    {{ form.errors | default_errors }}
            
                    <label for="name">Name</label>
                    <input type="text" name="contact[first_name]" id="name" placeholder="John Doe" />
                
                    <div class="email">
                        <label for="email">Email</label>
                        <input type="email" name="contact[email]" id="email" placeholder="email@example.com" />
                    </div>
                
                    <div class="message">
                        <label for="message">Message</label>
                        <textarea name="contact[body]" id="message" placeholder="Type your message..."></textarea>
                    </div>
                
                    <button type="submit" class="cta-btn-secondary">Submit</button>
                {% endform %}
            </div>

            <div class="right-side">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d13855.263255414984!2d-95.3926054!3d29.7540433!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb607023f2bce82c3!2sU-Plumb-It!5e0!3m2!1sen!2sus!4v1666299989962!5m2!1sen!2sus" style="border: 0; width: 100%; height: 100%; min-height: 400px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

        </section>
        <!-- /Contact Form -->

        {% section 'contact-text-section' %}

    </div>

</div>
  