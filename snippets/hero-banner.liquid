{% if change_height %}
    <div class="hero-banner" style="background-image: url('{{ img }}'); height: {{ height }}px">
        <h1>{{ header }}</h1>
        <p>{{ body }}</p>
    </div>
{% else %}
    <div class="hero-banner" style="background-image: url('{{ img }}')">
        <h1>{{ header }}</h1>
        <p>{{ body }}</p>
    </div>
{% endif %}